function data(n){for(var r=[],i,t=0;t<=360;t+=10)i=(n+t)%360,r.push({x:t,y:Math.sin(Math.PI*i/180).toFixed(4),z:Math.cos(Math.PI*i/180).toFixed(4)});return r}function update(){nReloads++;graph.setData(data(5*nReloads));$("#reloadStatus").text(nReloads+" reloads")}var nReloads=0,graph=Morris.Line({element:"graph",data:data(0),xkey:"x",ykeys:["y","z"],labels:["sin()","cos()"],parseTime:!1,ymin:-1,ymax:1,lineColors:["#1ABC9C"],pointFillColors:["#19a88b"],hideHover:!0});setInterval(update,100);Morris.Area({element:"area-as-line",behaveLikeLine:!1,data:[{x:"2014 Q1",y:3,z:3},{x:"2014 Q2",y:2,z:1},{x:"2014 Q3",y:2,z:4},{x:"2014 Q4",y:3,z:3}],xkey:"x",ykeys:["y","z"],labels:["Y","Z"],lineColors:["#1ABC9C","#293949"]});Morris.Donut({element:"donut",data:[{value:70,label:"foo",formatted:"at least 70%"},{value:15,label:"bar",formatted:"approx. 15%"},{value:10,label:"baz",formatted:"approx. 10%"},{value:5,label:"A really really long label",formatted:"at most 5%"}],backgroundColor:"#fff",labelColor:"#1abc9c",colors:["#1abc9c","#2dcc70","#f1c40f","#e84c3d"],formatter:function(n,t){return t.formatted}});Morris.Bar({element:"bar",data:[{x:"2014 Q1",y:3,z:2,a:3},{x:"2014 Q2",y:2,z:null,a:1},{x:"2014 Q3",y:0,z:2,a:4},{x:"2014 Q4",y:2,z:4,a:3}],xkey:"x",ykeys:["y","z","a"],labels:["Y","Z","A"],barColors:["#1abc9c","#2dcc70","#e84c3d"]})